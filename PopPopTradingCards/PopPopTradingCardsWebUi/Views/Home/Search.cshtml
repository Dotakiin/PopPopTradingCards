@model IEnumerable<User>

@{
    ViewData["Title"] = "Search";
}

<h1>Search</h1>

<form method="get" asp-action="Search">
    <p>
        <input type="search" placeholder="Enter username here" value="@ViewData["UserSearch"]" name="searchString"
               style="width:500px" />
        <button type="submit" class="btn btn-primary">Search</button>
    </p>

    @if (Model != null)
    {
        @foreach (var user in Model)
        {
            <div class="card mb-3">
                <h5>@user.Username</h5>
                <button class="btn btn-primary" asp-action="OtherCollection" asp-controller="Card" 
                        asp-route-id="@user.Id">View Collections</button>
            </div>
        }
    }
</form>


