@model CardTypeViewModel
@{
    ViewData["Title"] = "AddCard";
}

<h1>Add Card</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddCardAction">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="cardType" class="control-label"></label>
                <p>
                    <input type="radio" name="cardType" value="MTG" checked/>Magic: The Gathering
                </p>
                <p>
                    <input type="radio" name="cardType" value="Baseball" />Baseball
                </p>
            </div>
            <div class="form-group">
                <input type="submit" value="Select Card Type" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
