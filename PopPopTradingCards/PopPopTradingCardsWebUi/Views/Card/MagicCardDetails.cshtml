@model EditLocation
@{
    ViewData["Title"] = "MagicCardDetails";
}

<h1>MagicCardDetails</h1>

<img src=@Model.Card.Image alt=@Model.Card.Name width="180" />
<p>Name: @Model.Card.Name</p>
<p>Set: @Model.Card.Booster</p>
<p>Color: @Model.Card.Color</p>
<p>Converted Mana Cost: @Model.Card.CMC</p>
<p>Rarity: @Model.Card.Rarity</p>
<p>Location: @Model.Card.Location</p>
<form asp-action="PutMagicCard">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <p>New Location: </p>
        <input asp-for="NewLocation" class="form-control" />
        <span asp-validation-for="NewLocation" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Change Location" class="btn btn-primary" />
    </div>
</form>
<div>
    <a asp-action="DeleteMagicCard"><input type="submit" value="Delete Card" class="btn btn-primary" /></a>
</div>

